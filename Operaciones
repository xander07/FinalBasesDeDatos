-------------------PUNTO 3A---------------------------

1)
SET @a = (SELECT DISTINCT idPropietario FROM articulo);
SET @b =(SELECT cVendedor FROM vendedor WHERE cVendedor!=@a);
SELECT * FROM observador WHERE id = @b;

2)
 SELECT O.id,O.nombre,R.cantidad_art FROM observador O,(SELECT idPropietario, count(*) as cantidad_art from articulo group by idPropietario having idPropietario != (select idPropietario from articulo where tipoPropietario = 'comprador')) R WHERE O.id=R.idPropietario;


3)
SELECT codigoVendedor, COUNT(*) AS cantidad_art FROM articulo GROUP BY categoria HAVING cantidad_art>1; 	#FALTA CREAR COLUMNA CATEGORIA




-------------------PUNTO 3B---------------------------

1)
SELECT nombre 
FROM articulo
WHERE codigoVendedor = X              # X es la variable que se encarga de almacenar el codido de vendedor a buscar

2)
[IMPRIMIR CATEGORIA]
SET @aux = (SELECT categoria FROM  articulo WHERE codigoArticulo = X);	#FALTA CREAR COLUMNA CATEGORIA
SET @aux2 = (SELECT idPropietario FROM articulo WHERE categoria = @aux AND tipoPropietario = 'vendedor');
select * from observador where id = @aux2 and tipo = 'vendedor';



---------------- BORRADOS----------------------------------

1)BORRAR UN VENDEDOR:
delete from vendedor where cVendedor=X; 	#X es la cedula del vendedor a borrar


2) BORRAR UN PRODUCTO:

delete from articulo where codigoArticulo = N or nombre = X;		# Dejar N si se busca con codigoProducto o 
										dejar X si se va a buscar por nombre.


